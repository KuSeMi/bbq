<div class="container py-5">
  <div class="row">
    <div class="col-md-6 buffer-top">
      <h2>Регистрация</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render partial: 'partials/form_errors', locals: {model: @user} %>

        <form role="form ">
          <div class="form-group is-invalid">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                              placeholder: "you@example.com", class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>символов минимум)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password",
                                 placeholder: "пароль", class: 'form-control has-error has-feedback' %>
          </div>
          <div class="form-group has-feedback">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                                 placeholder: "подтверждение пароля", class: 'form-control' %>
          </div>


          <div class="form-group">
            <%= f.submit "Регистрация", class: "btn btn-success" %>
          </div>

          <div class="buffer-both form-group">
            <%= render "devise/shared/links" %>
          </div>
        </form>
      <% end %>
    </div>
  </div>
</div>



