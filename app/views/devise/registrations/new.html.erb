<div class="container">
  <h2>Регистрация</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <form role="form ">
      <div class="form-group">
        <%= f.label :email %>
        <i class="glyphicon glyphicon-envelope"></i> <br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
                          placeholder: "you@example.com" %>

      </div>
      <div class="form-group">
        <%= f.label :password %>
        <i class="glyphicon glyphicon-lock vcenter"></i>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>символов минимум)</em>
      <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "пароль" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <i class="glyphicon glyphicon-repeat"></i><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "подтверждение пароля" %>
      </div>


      <div class="form-group">
        <%= f.submit "Регистрация", class: "btn btn-success" %>
      </div>

      <div class="buffer-both form-group">
        <%= render "devise/shared/links" %>
      </div>
    </form>
  <% end %>
</div>



