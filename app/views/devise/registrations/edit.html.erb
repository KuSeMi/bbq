<h2><%= I18n.t('edit.registration') %></h2>

<div class="row">
  <div class="col-md-6 buffer-top">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render partial: 'partials/form_errors', locals: {model: @user} %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Ожидается подтверждение: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password %> <i>(оставьте пустым, если вы не хотите его менять)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> символов минимум</em>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %> <i>(нужен текущий пароль, чтобы подтвердить изменения)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions button-both">
        <%= f.submit "Обновить" %>
      </div>
    <% end %>

    <h3>Удалить аккаунт</h3>

    <%= button_to "Удалить", registration_path(resource_name),
                  data: { confirm: "Вы уверены?" }, method: :delete, class: "btn btn-success" %>

    <%= link_to "Назад", :back %>
  </div>
</div>
